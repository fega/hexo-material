<div class="row">
  <div class="col s12 l6">
    <div class="card white article-nav prev hoverable">
      <i class="material-icons left">fast_rewind</i>
      <h3>Newer</h3>

      <% if (post.prev){ %>
        <% if (post.prev.title){ %>
          <%= post.prev.title %>
        <% } else { %>
          (no title)
        <% } %>
      <% } %>
    </div>
  </div>
  <div class="col s12 l6">
    <div class="card white article-nav next hoverable">
    <i class="material-icons right ">fast_forward</i>
      <h3>Older</h3>
      <% if (post.prev){ %>
        <% if (post.prev.title){ %>
          <%= post.prev.title %>
        <% } else { %>
          (no title)
        <% } %>
      <% } %>
    </div>
  </div>

</div>

